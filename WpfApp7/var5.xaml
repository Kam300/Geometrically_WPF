        Title="Вариант 5" Height="300" Width="400">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="400">
            <MenuItem Header="Input" Name="miInput" Click="miInput_Click"/>
            <MenuItem Header="Calc" Name="miCalc" Click="miCalc_Click"/>
            <MenuItem Header="About" Name="about" Click="about_Click"/>
            <MenuItem Header="Вариант 4" Name="var4" Click="var4_Click"/>
