        <Canvas x:Name="canvas" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,18,0,0">
            <Canvas.Background>
                <ImageBrush ImageSource="/img/math.png"  Stretch="UniformToFill"/>

            </Canvas.Background>
