<Window x:Class="WpfApp7.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input Radius" Height="200" Width="300">
    <Grid>
        <Label Content="Radius:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="RadiusTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,10,0,0" Width="93"/>

        <CheckBox x:Name="SquareCheckBox" Content="Square" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <CheckBox x:Name="LengthCheckBox" Content="Length" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,80,0,0"/>

        <Button Content="OK" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" Width="75" Click="OkButton_Click"/>
    </Grid>
</Window>
